<% include ../partials/header %>
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp</h1>
            <p class="lead">View our hand-picked campgrounds from all over the world!</p>
            <hr class=my-4>
            <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add New Campground</a>
        </div>
    </header>
    
    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="card-img-top img-camp" src=<%= campground.image %>>
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name %></h4>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    
<% include ../partials/footer %>

