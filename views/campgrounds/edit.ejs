<% include ../partials/header %>

<h1 style="text-align: center;" >Edit <%= campground.name %> </h1>
<div class="row">
    <div style="width: 30%; margin: 20px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" name="campground[name]" type="text" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" name="campground[price]" type="number" value="<%= campground.price %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" name="campground[image]" type="text" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" name="campground[description]" type="text" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%include ../partials/footer %>